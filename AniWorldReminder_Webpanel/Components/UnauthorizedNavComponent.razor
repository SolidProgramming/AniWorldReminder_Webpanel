<HxSidebar CssClass="sticky-top">
    <HeaderTemplate>
        <div class="userWrap">
            <div class="user-image">
                <i class="bi-question-lg" style="font-size: 46px;"></i>
            </div>
        </div>
    </HeaderTemplate>
    <ItemsTemplate>
        <HxSidebarItem Href="@Routes.Login" Enabled="@(!InProgress)">
            <ContentTemplate>
                @if (@InProgress)
                {
                    <HxSpinner Size="SpinnerSize.Small" />
                }
                else
                {
                    <HxIcon Icon="BootstrapIcon.Send" />
                }
                Login
            </ContentTemplate>
        </HxSidebarItem>
        <HxSidebarItem Icon="BootstrapIcon.PlusLg" Href="@Routes.Verify">
            <ContentTemplate>
                Verifizieren
            </ContentTemplate>
        </HxSidebarItem>
    </ItemsTemplate>
    <TogglerTemplate></TogglerTemplate>
</HxSidebar>

@code{
    [Parameter]
    public bool InProgress { get; set; }
}