@inherits LayoutComponentBase
@inject IAuthenticationService AuthService

<div class="p-4 d-md-flex min-vh-100">
    <HxSidebar CssClass="sticky-top">
        <ItemsTemplate>     
            <HxSidebarItem Icon="BootstrapIcon.Person" Href="/" CssClass="pb-4">
                <ContentTemplate>
                    Profil
                </ContentTemplate>
            </HxSidebarItem>
            <HxSidebarItem Icon="BootstrapIcon.Columns" Href="/">
                <ContentTemplate>
                    Dashboard
                </ContentTemplate>
            </HxSidebarItem>
            <HxSidebarItem Icon="BootstrapIcon.PlusCircle" Href="/addreminder">
                <ContentTemplate>
                    Reminder <HxBadge Color="ThemeColor.Secondary" CssClass="ms-2">5</HxBadge>
                </ContentTemplate>
            </HxSidebarItem>

            <HxSidebarItem Icon="BootstrapIcon.Gear" Href="/" CssClass="border-top mt-5 pt-2 ">
                <ContentTemplate>
                    Einstellungen
                </ContentTemplate>
            </HxSidebarItem>
        </ItemsTemplate>
        <TogglerTemplate></TogglerTemplate>
    </HxSidebar>
    <div class="main p-4 flex-grow-1 overflow-hidden">
        @Body
    </div>
</div>
